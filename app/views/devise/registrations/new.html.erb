<div class="text_scale2">
<h2 class="text_scale2">登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :username, autofocus: true, class: "input_text" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(最低でも<%= @minimum_password_length %>文字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "input_text" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "input_text" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" , class: "submit_button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
