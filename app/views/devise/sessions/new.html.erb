<div class="text_scale2 center">
<h2 class="text_scale2">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :username, autofocus: true, class: "input_text" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "off", class: "input_text" %>
  </div>
<!-- 
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
 -->
  <div class="actions">
    <%= f.submit  "ログイン" , class: "submit_button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
