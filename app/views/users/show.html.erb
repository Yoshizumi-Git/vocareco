    <!-- <img class="visual" src="<%= recommend.music.image_url %>" alt="Not found.">  -->
    <div class="iframe-content">
      <iframe class="movie" allowfullscreen="allowfullscreen" frameborder="0" src="http://embed.nicovideo.jp/watch/<%= music.movie_url.split("/")[-1] %>?oldScript=1"></iframe>
    </div>
    <!-- <p class="ranking"> <%= i+1 %>位：<%= recommend.music.title %></p> -->
    <a class="music_title" href="/music/<%= music.id %>"> <%= i+1 %>位： <%= recommend.music.title %> </a>
  </div>
  <br>
<% end %>
